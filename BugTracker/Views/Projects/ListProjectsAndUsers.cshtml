@model IEnumerable<BugTracker.Models.ProjectViewModels>
@{
    ViewBag.Title = "Index";
}

<script type="text/javascript">
    $(document).ready(function () {
        //initialize the javascript
        //Basic Instance
        $("#table_id_projectsList").dataTable();
        //Search input style
        $('.dataTables_filter input').addClass('form-control').attr('placeholder', 'Search');
        $('.dataTables_length select').addClass('form-control');
        }
    );
</script>

<div class="page-head"> @Html.ActionLink("Create New Project", "Create") </div>
<div class="row">
    <div class="col-md-12">
        <div class="block-flat">
            <div class="header">
                <h3>Projects User Table</h3>
            </div>
            <div class="content">
                <div class="table-responsive">
                    <table class="display" id="table_id_projectsList">
                        <thead>
                            <tr>
                                <th>User Name</th>
                                <th>Assigned Projects</th>
                                <th>Change Project Assignment</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(x => item.UserName)</td>
                                    <td>

                                        @foreach (var p in item.Projects)
                                        {
                                            @Html.DisplayFor(x => p.Name) @:  
                                        }

                                    </td>
                                    <td>@Html.ActionLink("Modify Assignments", "AssignProjectsToUser", new { UserId = item.UserId })</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



@using BugTracker.Models
@model List<UserRoleViewModel>
@{
    ViewBag.Title = "Index";
}

<link rel="stylesheet" type="text/css" href="~/js/jquery.select2/select2.css" />
<link rel="stylesheet" type="text/css" href="~/js/bootstrap.slider/css/slider.css" />
<link rel="stylesheet" type="text/css" href="~/js/jquery.icheck/skins/flat/green.css">

<script type="text/javascript" src="~/js/bootstrap.switch/bootstrap-switch.js"></script>
<script type="text/javascript" src="~/js/jquery.icheck/icheck.min.js"></script>
<script type="text/javascript" src="~/js/jquery.select2/select2.min.js"></script>
<script type="text/javascript" src="~/js/bootstrap.slider/js/bootstrap-slider.js"></script>



<div class="wrapper">
    <div class="container">
        <div class="row">
            <div id="message">
                <br />
                <br />
                <br />
                <br />
            </div>
        </div>
        <div class="row">
            <form method="post" action="@Url.Action("EditUserRoles", "Roles")">
                @*<table style="width:100%" class="table table-striped table-bordered table-condensed">*@
                <table class="table table-bordered" id="table_id_roles">
                    <thead>
                        <tr>
                            <th data-halign="right" data-align="center">User Name</th>
                            <th data-halign="right" data-align="center">Admin</th>
                            <th data-halign="right" data-align="center">Developer</th>
                            <th data-halign="right" data-align="center">Project Manager</th>
                            <th data-halign="right" data-align="center">Submitter</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (var i = 0; i < Model.Count; i++)
                        {
                            <tr class="data-row">
                                <td>
                                    @Model[i].name
                                    @Html.Hidden("users[" + i + "].userId", Model[i].userId)
                                    @Html.Hidden("users[" + i + "].name", Model[i].name)
                                </td>
                                <td>
                                    @Html.CheckBox("users[" + i + "].admin", Model[i].admin, new { @class = "icheck" })
                                </td>
                                <td>
                                    @Html.CheckBox("users[" + i + "].developer", Model[i].developer)
                                </td>
                                <td>
                                    @Html.CheckBox("users[" + i + "].projectManager", Model[i].projectManager)
                                </td>
                                <td>
                                    @Html.CheckBox("users[" + i + "].submitter", Model[i].submitter)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <button class="btn btn-color" type="submit">Submit</button>
            </form>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function(){}
    /*Input & Radio Buttons*/
    $('.icheck').iCheck({
        checkboxClass: 'icheckbox_flat-green',
        radioClass: 'iradio_flat-green'
    });

        $('.demo1').colorpicker({
            format: 'hex', // force this format
        });
        $('.demo2').colorpicker({
            format: 'hex', // force this format
        });
        $('.demo-auto').colorpicker();
        // Disabled / enabled triggers
        $(".disable-button").click(function(e) {
            e.preventDefault();
            $("#demo_endis").colorpicker('disable');
        });

        $(".enable-button").click(function(e) {
            e.preventDefault();
            $("#demo_endis").colorpicker('enable');
        });

    }

</script>